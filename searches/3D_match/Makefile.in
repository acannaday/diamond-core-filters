VPATH = @srcdir@
SRCDIR = @srcdir@
OBJROOT = @OBJROOT@

STATIC_LIBS += @STATIC_LIBS@

CPPFLAGS += @GTK_CFLAGS@


# objects used to build the searchlet(s)
FILTER_SRCS = fil_3D_match.c

FILTER_OBJS =  fil_3D_match.o

SEARCHLET_LIBS += -lm 

SEARCH_LIB_SRCS = match_3D.cc 

SEARCH_LIB_OBJS = match_3D.o 


#
# All the source files that are needed for depend.
#
SRCS = $(FILTER_SRCS) $(SEARCH_LIB_SRCS)
OBJS = $(FILTER_OBJS) $(SEARCH_LIB_OBJS)

#
# Other objects to cleanup
CLEAN_OTHERS += 

TARGETS = fil_3D_match match_3D.so

SHARED_LIB += fil_3D_match match_3D.so
SHARED_LIB += $(SRCDIR)/3D_match.sf_conf

fil_3D_match: $(FILTER_OBJS)
	$(FIL_COMMAND)

match_3D.so: $(SEARCH_LIB_OBJS)
	$(SO_COMMAND)

default: $(TARGETS)

include ${OBJROOT}/Makefile.template

