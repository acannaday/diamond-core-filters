ROOTDIR = @top_srcdir@
VPATH = @srcdir@
SRCDIR = @srcdir@
OBJROOT = @OBJROOT@

CPPFLAGS += @GTK_CFLAGS@
                                                                                
# objects used to build the searchlet(s)
FILTER_LIB_SRCS = fil_shingling.c rabin.c rabin.h
FILTER_LIB_OBJS = fil_shingling.o rabin.o

SEARCH_LIB_SRCS = shingling_search.cc shingling_search.h
SEARCH_LIB_OBJS = shingling_search.o

#
# All the source files that are needed for depend.
#
SRCS = $(FILTER_LIB_SRCS) $(SEARCH_LIB_SRCS)
OBJS = $(FILTER_LIB_OBJS) $(SEARCH_LIB_OBJS)

#
# Other objects to cleanup
CLEAN_OTHERS +=

TARGETS = fil_shingling.so shingling_search.so

SHARED_LIB += fil_shingling.so shingling_search.so $(SRCDIR)/shingling.sf_conf

include ${OBJROOT}/Makefile.template

fil_shingling.so: $(FILTER_LIB_OBJS)
	$(FIL_SO_COMMAND)

shingling_search.so: $(SEARCH_LIB_OBJS)
	$(SO_COMMAND)

default: $(TARGETS)

