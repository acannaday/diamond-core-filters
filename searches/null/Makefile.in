ROOTDIR = @top_srcdir@
VPATH = @srcdir@
SRCDIR = @srcdir@
OBJROOT = @OBJROOT@

STATIC_LIBS += $(BUILD_LIB_PATH)/libsfimage.a

# objects used to build the searchlet(s)
FILTER_SRCS = fil_null.c

FILTER_OBJS =  fil_null.o

#
# All the source files that are needed for depend.
#
SRCS = $(FILTER_SRCS) image.c
OBJS = $(FILTER_OBJS)

#
# Other objects to cleanup
CLEAN_OTHERS +=

TARGETS = fil_null null.codec

SHARED_LIB += fil_null null.codec

include ${OBJROOT}/Makefile.template

fil_null: $(FILTER_OBJS)
	$(FIL_COMMAND)

null.codec: null.xml
	$(BUNDLE_COMMAND)

default: $(TARGETS)

