VPATH = @srcdir@
SRCDIR = @srcdir@
OBJROOT = @OBJROOT@
CVCFGXMLS = @CVCFGXMLS@

STATIC_LIBS += ${BUILD_LIB_PATH}/libocvimage.a ${BUILD_LIB_PATH}/libsfimage.a 
STATIC_LIBS += ${BUILD_LIB_PATH}/libresults.a
STATIC_LIBS += @CVLDFLAGS@
STATIC_LIBS += @STATIC_LIBS@
STATIC_LIBS += -Wl,-Bstatic -lgomp -Wl,-Bdynamic

CPPFLAGS += @GTK_CFLAGS@
CPPFLAGS += @CVCPPFLAGS@

# objects used to build the searchlet(s)
FILTER_SRCS += fil_ocv.c opencv_face_tools.c

FILTER_COMMON = fil_ocv.o opencv_face_tools.o

FILTER_OBJS = ${FILTER_COMMON} fil_ocv.o

FILTER_LIBS = -pthread

SEARCH_LIB_SRCS = ocv_search.cc ocv_face_search.cc opencv_face_tools.c 
SEARCH_LIB_SRCS += ocv_body_search.cc ocv_upperbody_search.cc 
SEARCH_LIB_SRCS += ocv_lowerbody_search.cc ocv_profile_search.cc

SEARCH_LIB_COMMON = ocv_search.o

SEARCH_LIB_OBJS = ${SEARCH_LIB_COMMON} ocv_face_search.o ocv_body_search.o 
SEARCH_LIB_OBJS += ocv_upperbody_search.o ocv_lowerbody_search.o 
SEARCH_LIB_OBJS += ocv_profile_search.o

SEARCH_LIB_LIBS += -lm 

SEARCHLET_LIBS += -lm
#
# All the source files that are needed for depend.
#
SRCS = $(FILTER_SRCS) $(SEARCH_LIB_SRCS)
OBJS = $(FILTER_OBJS) $(SEARCH_LIB_OBJS)

#
# Other objects to cleanup
CLEAN_OTHERS += 

TARGETS = fil_ocv opencv_face_search.so opencv_profile_search.so
TARGETS += opencv_body_search.so opencv_upperbody_search.so
TARGETS += opencv_lowerbody_search.so

SHARED_LIB += fil_ocv
SHARED_LIB += opencv_face_search.so $(SRCDIR)/opencv_face.sf_conf 
SHARED_LIB += $(SRCDIR)/haarcascade_frontalface.xml 
SHARED_LIB += opencv_profile_search.so $(SRCDIR)/opencv_profile.sf_conf 
SHARED_LIB += $(SRCDIR)/haarcascade_profileface.xml
SHARED_LIB += opencv_body_search.so $(SRCDIR)/opencv_body.sf_conf 
SHARED_LIB += $(SRCDIR)/haarcascade_fullbody.xml 
SHARED_LIB += opencv_upperbody_search.so $(SRCDIR)/opencv_upperbody.sf_conf 
SHARED_LIB += $(SRCDIR)/haarcascade_upperbody.xml
SHARED_LIB += opencv_lowerbody_search.so $(SRCDIR)/opencv_lowerbody.sf_conf 
SHARED_LIB += $(SRCDIR)/haarcascade_lowerbody.xml

include ${OBJROOT}/Makefile.template


fil_ocv: $(FILTER_OBJS)
	$(FIL_COMMAND)

opencv_face_search.so: ocv_face_search.o $(SEARCH_LIB_COMMON)
	$(SO_COMMAND)

opencv_profile_search.so: ocv_profile_search.o $(SEARCH_LIB_COMMON)
	$(SO_COMMAND)

opencv_body_search.so: ocv_body_search.o $(SEARCH_LIB_COMMON)
	$(SO_COMMAND)

opencv_upperbody_search.so: ocv_upperbody_search.o $(SEARCH_LIB_COMMON)
	$(SO_COMMAND)

opencv_lowerbody_search.so: ocv_lowerbody_search.o $(SEARCH_LIB_COMMON)
	$(SO_COMMAND)

default: $(TARGETS)
