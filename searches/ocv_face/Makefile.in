VPATH = @srcdir@
SRCDIR = @srcdir@
OBJROOT = @OBJROOT@
CVCFGXMLS = @CVCFGXMLS@

STATIC_LIBS += ${BUILD_LIB_PATH}/libocvimage.a ${BUILD_LIB_PATH}/libsfimage.a 
STATIC_LIBS += ${BUILD_LIB_PATH}/libresults.a
STATIC_LIBS += @CVLDFLAGS@
STATIC_LIBS += @STATIC_LIBS@
STATIC_LIBS += -Wl,-Bstatic -lgomp -Wl,-Bdynamic

CPPFLAGS += @CVCPPFLAGS@

# objects used to build the searchlet(s)
FILTER_SRCS += fil_ocv.c opencv_face_tools.c

FILTER_COMMON = fil_ocv.o opencv_face_tools.o

FILTER_OBJS = ${FILTER_COMMON} fil_ocv.o

FILTER_LIBS = -pthread

#
# All the source files that are needed for depend.
#
SRCS = $(FILTER_SRCS)
OBJS = $(FILTER_OBJS)

#
# Other objects to cleanup
CLEAN_OTHERS += 

TARGETS = fil_ocv ocv.search

SHARED_LIB += fil_ocv ocv.search

DETECTORS  = $(SRCDIR)/haarcascade_frontalface.xml
DETECTORS += $(SRCDIR)/haarcascade_profileface.xml
DETECTORS += $(SRCDIR)/haarcascade_fullbody.xml
DETECTORS += $(SRCDIR)/haarcascade_upperbody.xml
DETECTORS += $(SRCDIR)/haarcascade_lowerbody.xml

include ${OBJROOT}/Makefile.template


fil_ocv: $(FILTER_OBJS)
	$(FIL_COMMAND)

ocv.search: ocv.xml $(DETECTORS)
	$(BUNDLE_COMMAND)

default: $(TARGETS)
