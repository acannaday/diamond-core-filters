ROOTDIR = @top_srcdir@
VPATH = @srcdir@
SRCDIR = @srcdir@
OBJROOT = @OBJROOT@

CPPFLAGS += @GTK_CFLAGS@
                                                                                
# objects used to build the searchlet(s)
FILTER_LIB_SRCS = fil_text_attr.c
FILTER_LIB_OBJS = fil_text_attr.o 
FILTER_LIB_LIBS += -lm 

SEARCH_LIB_SRCS = text_attr_search.cc
SEARCH_LIB_OBJS =  text_attr_search.o 
SEARCH_LIB_LIBS += 

#
# All the source files that are needed for depend.
#
SRCS = $(FILTER_LIB_SRCS) $(SEARCH_LIB_SRCS)
OBJS = $(FILTER_LIB_OBJS) $(SEARCH_LIB_OBJS)

#
# Other objects to cleanup
CLEAN_OTHERS += eead_config.cc $(COMMON_SRCS)

TARGETS = fil_text_attr.a text_attr_search.so

SHARED_LIB = fil_text_attr.a text_attr_search.so $(SRCDIR)/text_attr.sf_conf

include ${OBJROOT}/Makefile.template
                                                                                
fil_text_attr.a: $(FILTER_LIB_OBJS)
	$(LD) -o $@ -r $^ $(STATIC_LIBS) $(SO_LIBS) $(LDPATH)

text_attr_search.so: $(SEARCH_LIB_OBJS)


default: $(TARGETS)
