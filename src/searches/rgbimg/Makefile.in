ROOTDIR = @top_srcdir@
VPATH = @srcdir@
SRCDIR = @srcdir@
OBJROOT = @OBJROOT@

STATIC_LIBS += $(BUILD_LIB_PATH)/libsfimage.a
STATIC_LIBS += @STATIC_LIBS@

CPPFLAGS += @GTK_CFLAGS@


# objects used to build the searchlet(s)
FILTER_LIB_SRCS = fil_rgb.c 

FILTER_LIB_OBJS =  fil_rgb.o 

SEARCH_LIB_SRCS = rgb_img.cc

SEARCH_LIB_OBJS =  rgb_img.o

SEARCH_LIB_LIBS += -lm 

SEARCHLET_LIBS += -lm 

#
# All the source files that are needed for depend.
#
SRCS = $(FILTER_LIB_SRCS) $(SEARCH_LIB_SRCS)
OBJS = $(FILTER_LIB_OBJS) $(SEARCH_LIB_OBJS)

#
# Other objects to cleanup
CLEAN_OTHERS += 

TARGETS = fil_rgb.a rgb_img.so

SHARED_LIB += fil_rgb.a rgb_img.so $(SRCDIR)/rgb_img.sf_conf

include ${OBJROOT}/Makefile.template
                                                                                
fil_rgb.a: $(FILTER_LIB_OBJS)
	$(LD) -o $@ -r $^ $(STATIC_LIBS) $(SO_LIBS) $(LDPATH)

rgb_img.so: $(SEARCH_LIB_OBJS)

default: $(TARGETS)
