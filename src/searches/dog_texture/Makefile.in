VPATH = @srcdir@
SRCDIR = @srcdir@
OBJROOT = @OBJROOT@
CVCPPFLAGS = @CVCPPFLAGS@
CVLDFLAGS = @CVLDFLAGS@

STATIC_LIBS += ${BUILD_LIB_PATH}/libocvimage.a ${BUILD_LIB_PATH}/libsfimage.a
STATIC_LIBS += ${BUILD_LIB_PATH}/libresults.a
STATIC_LIBS += ${CVLDFLAGS}
STATIC_LIBS += @STATIC_LIBS@

CPPFLAGS += `pkg-config gtk+-2.0 gthread-2.0 --cflags-only-I`
CPPFLAGS += ${CVCPPFLAGS} 
LDFLAGS += ${CVLDFLAGS}



# objects used to build the searchlet(s)
FILTER_LIB_SRCS = fil_texture.cc texture_tools.c

FILTER_LIB_OBJS = fil_texture.o texture_tools.o

SEARCHLET_LIBS += -lm -locvimage -lsfimage  -lresults


SEARCH_LIB_SRCS = dog_texture_search.cc  texture_tools.c

SEARCH_LIB_OBJS = dog_texture_search.o  texture_tools.o


SEARCH_LIB_LIBS += -lm -locvimage

#
# All the source files that are needed for depend.
#
SRCS = $(FILTER_LIB_SRCS) $(SEARCH_LIB_SRCS)
OBJS = $(FILTER_LIB_OBJS) $(SEARCH_LIB_OBJS)

#
# Other objects to cleanup
CLEAN_OTHERS += 

TARGETS = fil_dog_texture.a dog_texture_search.so

SHARED_LIB += fil_dog_texture.a dog_texture_search.so 
SHARED_LIB += $(SRCDIR)/dog_texture.sf_conf

include ${OBJROOT}/Makefile.template

#
# for some reason the pattern matching doesn't seem to work for
# some *.so's.
fil_dog_texture.a: $(FILTER_LIB_OBJS)
	$(LD) -o $@ -r $^ $(STATIC_LIBS) $(SO_LIBS) $(LDPATH)

dog_texture_search.so: $(SEARCH_LIB_OBJS)

default: $(TARGETS)
