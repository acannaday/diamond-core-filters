ROOTDIR = @top_srcdir@
VPATH = @srcdir@
SRCDIR = @srcdir@
OBJROOT = @OBJROOT@
CVCPPFLAGS = @CVCPPFLAGS@
CVLDFLAGS = @CVLDFLAGS@

CPPFLAGS += `pkg-config gtk+-2.0 gthread-2.0 --cflags-only-I`

# objects used to build the searchlet(s)
FILTER_LIB_SRCS = fil_vj_face.c  vj_face_tools.c facedet.c fil_data2ii.c
FILTER_LIB_SRCS += merge_faces.c

FILTER_LIB_OBJS =  fil_vj_face.o  vj_face_tools.o facedet.o fil_data2ii.o
FILTER_LIB_OBJS += merge_faces.o

SEARCHLET_LIBS += -Wl,-static -lm -lsfimage -ltiff -ljpeg -lz

SEARCH_LIB_SRCS = vj_face_search.cc   vj_face_tools.c facedet.c fil_data2ii.c
SEARCH_LIB_SRCS += ii_img.cc merge_faces.c

SEARCH_LIB_OBJS =  vj_face_search.o vj_face_tools.o facedet.o fil_data2ii.o
SEARCH_LIB_OBJS +=  ii_img.o merge_faces.o

SEARCH_LIB_LIBS += 

#
# All the source files that are needed for depend.
#
SRCS = $(FILTER_LIB_SRCS) $(SEARCH_LIB_SRCS)
OBJS = $(FILTER_LIB_OBJS) $(SEARCH_LIB_OBJS)

#
# Other objects to cleanup
CLEAN_OTHERS += 

TARGETS = fil_vj_face.so vj_face_search.so

SHARED_BIN += fil_vj_face.so vj_face_search.so

include ${OBJROOT}/Makefile.template
                                                                                
fil_vj_face.so: $(FILTER_LIB_OBJS)
	$(CPLUSPLUS) $(CFLAGS_SO) -o $@ -shared -static $(FILTER_LIB_OBJS) $(SEARCHLET_LIBS) $(SEARCHLET_LIBDIR) $(LDFLAGS)
                                                                                
vj_face_search.so: $(SEARCH_LIB_OBJS)
	$(CPLUSPLUS) $(CFLAGS_SO) -o $@ -shared -static $(SEARCH_LIB_OBJS)

default: $(TARGETS)
