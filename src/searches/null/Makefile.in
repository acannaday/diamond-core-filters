ROOTDIR = @top_srcdir@
VPATH = @srcdir@
SRCDIR = @srcdir@
OBJROOT = @OBJROOT@

CPPFLAGS += @GTK_CFLAGS@


# objects used to build the searchlet(s)
FILTER_LIB_SRCS = fil_null.c

FILTER_LIB_OBJS =  fil_null.o

SEARCH_LIB_SRCS = null.cc

SEARCH_LIB_OBJS =  null.o

#
# All the source files that are needed for depend.
#
SRCS = $(FILTER_LIB_SRCS)
OBJS = $(FILTER_LIB_OBJS)

#
# Other objects to cleanup
CLEAN_OTHERS +=

TARGETS = fil_null.so null.so

SHARED_LIB += fil_null.so null.so $(SRCDIR)/null.sf_conf

include ${OBJROOT}/Makefile.template

fil_null.so: $(FILTER_LIB_OBJS)
	$(FIL_SO_COMMAND)

null.so:  $(SEARCH_LIB_OBJS)
	$(SO_COMMAND)

default: $(TARGETS)

