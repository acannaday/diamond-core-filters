ROOTDIR = @top_srcdir@
VPATH = @srcdir@
SRCDIR = @srcdir@
OBJROOT = @OBJROOT@
CVCPPFLAGS = @CVCPPFLAGS@
CVLDFLAGS = @CVLDFLAGS@



CPPFLAGS += `pkg-config gtk+-2.0 gthread-2.0 --cflags-only-I`
CPPFLAGS += ${CVCPPFLAGS}
LDFLAGS += ${CVLDFLAGS}


# objects used to build the searchlet(s)
FILTER_LIB_SRCS = fil_ocv_face.c opencv_face_tools.c

FILTER_LIB_OBJS =  fil_ocv_face.o opencv_face_tools.o

SEARCH_LIB_SRCS = ocv_face_search.cc  opencv_face_tools.c

SEARCH_LIB_OBJS =  ocv_face_search.o opencv_face_tools.o

SEARCH_LIB_LIBS += -lm -lcvaux -locvimage -lopencv 

SEARCHLET_LIBS += -Wl,-static -lm -locvimage -lcvaux -lopencv  -lsfimage 
SEARCHLET_LIBS += -lresults -ltiff -ljpeg -lz
#
# All the source files that are needed for depend.
#
SRCS = $(FILTER_LIB_SRCS) $(SEARCH_LIB_SRCS)
OBJS = $(FILTER_LIB_OBJS) $(SEARCH_LIB_OBJS)

#
# Other objects to cleanup
CLEAN_OTHERS += 

TARGETS = fil_ocv_face.so opencv_face_search.so

SHARED_LIB += fil_ocv_face.so opencv_face_search.so opencv_face.sf_conf

include ${OBJROOT}/Makefile.template
                                                                                
fil_ocv_face.so: $(FILTER_LIB_OBJS)
	$(CPLUSPLUS) $(CFLAGS_SO) -o $@ -shared -static $(FILTER_LIB_OBJS) $(SEARCHLET_LIBS) $(SEARCHLET_LIBDIR) $(LDFLAGS)
                                                                                
opencv_face_search.so: $(SEARCH_LIB_OBJS)
	$(CPLUSPLUS) $(CFLAGS_SO) -o $@ -shared -static $(SEARCH_LIB_OBJS) $(SEARCH_LIB_LIBS) $(LDFLAGS)

default: $(TARGETS)
