VPATH = @srcdir@
SRCDIR = @srcdir@
OBJROOT = @OBJROOT@

STATIC_LIBS += $(BUILD_LIB_PATH)/libsfimage.a
STATIC_LIBS += $(BUILD_LIB_PATH)/libresults.a
STATIC_LIBS += @STATIC_LIBS@

CPPFLAGS += @GTK_CFLAGS@
                                                                                # objects used to build the searchlet(s)
FILTER_LIB_SRCS = fil_gab_texture.cc gabor_tools.cc gabor.cc
FILTER_LIB_OBJS = fil_gab_texture.o  gabor_tools.o gabor.o

SEARCHLET_LIBS += -lm

SEARCH_LIB_SRCS = gabor_texture_search.cc gabor_tools.cc gabor.cc
SEARCH_LIB_OBJS =  gabor_texture_search.o gabor_tools.o gabor.o
SEARCH_LIB_LIBS +=  

#
# All the source files that are needed for depend.
#
SRCS = $(FILTER_LIB_SRCS) $(SEARCH_LIB_SRCS)
OBJS = $(FILTER_LIB_OBJS) $(SEARCH_LIB_OBJS)

#
# Other objects to cleanup
CLEAN_OTHERS += 

TARGETS = fil_gabor_texture.a gabor_texture_search.so

SHARED_LIB += fil_gabor_texture.a gabor_texture_search.so 
SHARED_LIB += $(SRCDIR)/gabor_texture.sf_conf

include ${OBJROOT}/Makefile.template
                                                                                
fil_gabor_texture.a: $(FILTER_LIB_OBJS)
	$(LD) -o $@ -r $^ $(STATIC_LIBS) $(SO_LIBS) $(LDPATH)

gabor_texture_search.so: $(SEARCH_LIB_OBJS)

default: $(TARGETS)
