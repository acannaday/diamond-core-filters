ROOTDIR = @top_srcdir@
VPATH = @srcdir@
SRCDIR = @srcdir@
OBJROOT = @OBJROOT@
CVCPPFLAGS = @CVCPPFLAGS@
CVLDFLAGS = @CVLDFLAGS@

CPPFLAGS += `pkg-config gtk+-2.0 gthread-2.0 --cflags-only-I`


# objects used to build the searchlet(s)
FILTER_LIB_SRCS = fil_rgb_histo.c rgb_histo.c 

FILTER_LIB_OBJS =  fil_rgb_histo.o rgb_histo.o

SEARCHLET_LIBS += -Wl,-static -lm -lsfimage -lresults -ltiff -ljpeg -lz

SEARCH_LIB_SRCS = rgb_histo.c rgb_histo_search.cc histo_ii.cc

SEARCH_LIB_OBJS = rgb_histo.o rgb_histo_search.o histo_ii.o

SEARCH_LIB_LIBS += 

#
# All the source files that are needed for depend.
#
SRCS = $(FILTER_LIB_SRCS) $(SEARCH_LIB_SRCS)
OBJS = $(FILTER_LIB_OBJS) $(SEARCH_LIB_OBJS)

#
# Other objects to cleanup
CLEAN_OTHERS += 

TARGETS = fil_rgb_histo.so rgb_histo_search.so

SHARED_LIB += fil_rgb_histo.so rgb_histo_search.so rgb_histo.sf_conf

include ${OBJROOT}/Makefile.template
                                                                                
fil_rgb_histo.so: $(FILTER_LIB_OBJS)
	$(CPLUSPLUS) $(CFLAGS_SO) -o $@ -shared -static $(FILTER_LIB_OBJS) $(SEARCHLET_LIBS) $(LDFLAGS)
                                                                                
rgb_histo_search.so: $(SEARCH_LIB_OBJS)
	$(CPLUSPLUS) $(CFLAGS_SO) -o $@ -shared -static $(SEARCH_LIB_OBJS) $(SEARCH_LIB_LIBS) $(LDFLAGS)

default: $(TARGETS)
