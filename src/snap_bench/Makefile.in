ROOTDIR = @top_srcdir@
VPATH = @srcdir@
SRCDIR = @srcdir@
OBJROOT = @OBJROOT@
CVCPPFLAGS = @CVCPPFLAGS@
CVLDFLAGS = @CVLDFLAGS@


CPPFLAGS += ${CVCPPFLAGS}
LDFLAGS += ${CVLDFLAGS}


# to build these files.
LIBS += -ldl -lfl -lpthread -lm
LIBS += -Wl,-whole-archive -lsearchlet -lfilterexec -lfilter -ltools -llog
LIBS += -Wl,-no-whole-archive -lfl -lodisk
LIBS += -lhstub -ldctl -ldconfig
LIBS += -lcv -lssl
                                                                                
#


OBJS = snap_bench.o bench_config.o
SRCS = snap_bench.c bench_config.c

TARGETS = snap_bench 


include $(OBJROOT)/Makefile.template

#
#

snap_bench: $(OBJS)
	$(CPLUSPLUS) $(CFLAGS) $(LDFLAGS) -o snap_bench -rdynamic $(OBJS) $(LIBS)




